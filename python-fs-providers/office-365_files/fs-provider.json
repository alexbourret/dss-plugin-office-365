{
    "meta" : {
        "label": "Access Office 365 files",
        "description": "",
        "icon": "icon-cloud"
    },
    "kind": "PYTHON",
    "paramsPythonSetup": "browse_sp_lists.py",
    "params": [
        {
            "name": "auth_type",
            "label": "Type of authentication",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "login",
                    "label": "User name / password"
                },
                {
                    "value": "oauth",
                    "label": "Azure Single Sign On"
                },
                {
                    "value": "site-app-permissions",
                    "label": "Site App Permissions"
                }
            ],
            "defaultValue": "oauth",
            "visibilityCondition": false
        },
        {
            "name": "sharepoint_oauth",
            "label": "Azure preset",
            "type": "PRESET",
            "parameterSetId": "ms-graph-sso",
            "visibilityCondition": "model.auth_type == 'oauth'"
        },
        {
            "name": "search_space",
            "label": "Searching for",
            "type": "SELECT",
            "selectChoices": [
                {
                    "value": "user",
                    "label": "Your files"
                },
                {
                    "value": "other-user",
                    "label": "A user's files"
                },
                {
                    "value": "site",
                    "label": "Site's files"
                },
                {
                    "value": "group",
                    "label": "Group's files"
                },
                {
                    "value": "shared",
                    "label": "Files shared with me"
                }
            ],
            "defaultValue": "site",
            "visibilityCondition": false
        },
        {
            "name": "sharepoint_site_id",
            "label": " ",
            "description": "Select a site",
            "type": "SELECT",
            "visibilityCondition": "model.search_space=='site'",
            "getChoicesFromPython": true,
            "triggerParameters": ["search_space", "sharepoint_oauth"]
        },
        {
            "name": "sharepoint_drive_id",
            "label": " ",
            "description": "Select a drive",
            "type": "SELECT",
            "getChoicesFromPython": true,
            "triggerParameters": ["sharepoint_site_id"]
        }
    ]
}
